//Q1. Declare 2 variable of a type short and store sum of it in a variable and print it.
using System;

namespace ConsoleApplication1
{
    class Program
    {
        static void Main(string[] args)
        {         
            short x = 10;
            short y = 20;
            int z=x +y;

            Console.WriteLine(z);
            Console.ReadLine();
        }
    }  
}
